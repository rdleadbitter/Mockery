<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mockeryfx.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="1000"
      prefHeight="700">

    <stylesheets>
        <URL value="@../styles.css"/>
    </stylesheets>

    <Label text="Login" styleClass="title"/>

    <TextField fx:id="usernameField" promptText="Username" prefWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"/>

    <Button text="Login" onAction="#handleLogin"/>
    <Button text="Register" onAction="#goToRegister"/>

    <Label fx:id="errorLabel" id="statusLabel"/>
</VBox>